{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",    
    "esModuleInterop": false,
    
    "declaration": true,
    "declarationDir": "./dist/types/",
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is correct in imports. */
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "lib": [
      "es2017"
    ],    
  },
  "include": ["./src/**/*.ts"]
}